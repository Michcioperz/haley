#example fidgot's rules file

#useful, user can write "name", or "name:"
$sname  = "$name:{0,1}"

"$sname add (.*)"           "$add_rule(<1>)"
"$sname list"               "$list_rules()"
"$sname del ([0-9]*)"       "$del_rule(<1>)"

"$sname hi"                 "hi"
"$sname say (.*) to me"     "$user: <1>"
"$sname say (.*) to (.*)"   "<2>: <1>"
"$sname say (.*)"           "<1>"
"$sname.*"                  "$user: i don't understand you :("
